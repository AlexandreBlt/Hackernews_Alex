 <div class="d-flex pt-2 px-4" id="post_<%= post.id %>">
    <div class="d-flex gap-3">
    <%= link_to upvote_post_path(post) , data: {turbo_method: :patch} do%>
    <i class="fa-solid fa-caret-up pt-2"></i>
  <% end %>
      <div class="d-flex flex-column">
      <div class="d-flex flex-row gap-2 align-items-center">
      <%= link_to post_path(post), class:"text-decoration-none" do %>
              <h6 class="card-title"><%= post.title %></h5>
              <% end %>
              <a class="text-body text-decoration-none " target="_blank" href="<%= post.url %>"><%= post.url %></a>
    </div>
              <p class="card-text"><small class="text-muted"><%=post.votes_for.size%> points by <%= post.user.username%></small></p>
      </div>
    </div>
  </div>
